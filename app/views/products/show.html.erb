<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
    <%= render(partial: 'products/form') %>
    <% end %>
    <div class="container">
      <% @product.reviews.order('created_at DESC').each do |review| %>
      <div>
      <h4 class="panel-title">Review<% current_user.first_name %></h4>
      </div>
      <div>
      <p>Description: <%= review.description %></p>
      </div>
      <div>
      <p>Rating: <%= review.rating %></p>
      <%= button_to "Delete", product_review_path(:product_id => review.product_id, :id => review.id), method: :delete %>
      <% end %>
      </div>
    </div> 
  </article>

</section>
