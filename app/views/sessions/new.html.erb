<%= form_tag '/login' do %>

  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <form id="fileForm" role="form">
          <fieldset>
            <legend class="text-center">Log In</legend>
            <div class="form-group">Email:
              <%= text_field_tag :email %>
            </div>
            <div class="form-group">Password:
              <%= password_field_tag :password %>
            </div>
            <div>
              <%= submit_tag "Submit" %>
            </div>
            <% end %>